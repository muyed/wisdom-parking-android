<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cn.climax.wisdomparking.ui.pay.PayOrderActivity">

    <include layout="@layout/base_blue_nav_toolbar_layout" />

    <TextView
        android:id="@+id/tvSkip2OnLine"
        android:layout_width="240dp"
        android:layout_height="36dp"
        android:layout_below="@id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="ONLINE TEST"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tvSkip2AliPay"
        android:layout_width="240dp"
        android:layout_height="36dp"
        android:layout_below="@+id/tvSkip2OnLine"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="ALI PAY TEST"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tvSkip2WeChat"
        android:layout_width="240dp"
        android:layout_height="36dp"
        android:layout_below="@+id/tvSkip2AliPay"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="WECHAT PAY TEST"
        android:textColor="@color/white" />

</RelativeLayout>
