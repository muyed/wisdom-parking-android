<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F3F1F2">

    <include
        layout="@layout/base_blue_nav_toolbar_layout"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tvHeaderHint"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_below="@+id/toolbar"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="请确认是您本人，验证完后不可修改"
        android:textColor="@color/text_lighter_color"
        android:textSize="13sp" />

    <LinearLayout
        android:id="@+id/allRetrieveArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvHeaderHint"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="visible">

        <!-- 真实姓名 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="0dp">

            <TextView
                android:layout_width="88dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="证件类型"
                android:textColor="@color/text_normal_color" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="身份证"
                android:textColor="@color/text_normal_color" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_dimen_1px"
            android:layout_marginLeft="16dp"
            android:background="@color/color_E4E4E4" />

        <!-- 真实姓名 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="0dp">

            <TextView
                android:layout_width="88dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="真实姓名"
                android:textColor="@color/text_normal_color" />

            <EditText
                android:id="@+id/etRealUserName"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:hint="请填写真实姓名"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/text_common_color"
                android:textColorHint="@color/text_common_hint"
                android:textCursorDrawable="@null"
                android:textSize="13sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_dimen_1px"
            android:layout_marginLeft="16dp"
            android:background="@color/color_E4E4E4" />

        <!-- 证件号码 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="0dp">

            <TextView
                android:layout_width="88dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="证件号码"
                android:textColor="@color/text_normal_color" />

            <EditText
                android:id="@+id/etCertificateNo"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:hint="请填写证件号码"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/text_common_color"
                android:textColorHint="@color/text_common_hint"
                android:textCursorDrawable="@null"
                android:textSize="13sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_dimen_1px"
            android:layout_marginLeft="16dp"
            android:background="@color/color_E4E4E4" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvConfirm2Submit"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/allRetrieveArea"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/home_order_lock_bg"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="5dp"
        android:text="确定并提交"
        android:textColor="@color/white"
        android:textSize="13sp" />

</RelativeLayout>
