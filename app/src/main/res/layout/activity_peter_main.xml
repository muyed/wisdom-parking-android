<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.cn.climax.wisdomparking.ui.PeterMainActivity">

    <include layout="@layout/base_blue_nav_toolbar_layout" />

    <RelativeLayout
        android:id="@+id/rlMainPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_marginBottom="12dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tvLogout"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="LOGOUT"
            android:visibility="gone" />

        <FrameLayout
            android:id="@+id/flAddSmartLock"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"
            android:background="@drawable/order_circle">

            <TextView
                android:layout_width="112dp"
                android:layout_height="112dp"
                android:layout_gravity="center"
                android:background="@drawable/order_circle_primary"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="88sp" />

        </FrameLayout>

        <TextView
            android:id="@+id/tvLockHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/flAddSmartLock"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/home_show_bg_body"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:text="点击添加智能车位锁"
            android:textColor="@color/text_normal_color"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tvVisitorHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvLockHint"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="如果你是访客，请输入预约码"
            android:textColor="@color/text_common_color"
            android:textSize="14sp" />

        <include
            layout="@layout/layout_editview"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@+id/tvVisitorHint"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/tvOrderLock"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@+id/editTextBodyLl"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/home_order_lock_bg"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:paddingTop="5dp"
            android:text="立即预约"
            android:textColor="@color/white"
            android:textSize="13sp" />

    </RelativeLayout>

</RelativeLayout>
