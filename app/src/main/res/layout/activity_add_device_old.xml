<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cn.climax.wisdomparking.ui.main.carport.AddDeviceActivity">

    <include layout="@layout/base_blue_nav_toolbar_layout" />

    <Button
        android:id="@+id/btnImCarOwner"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/activity_button_blue_border"
        android:gravity="center"
        android:text="我是车位主"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btnImNotCarOwner"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/btnImCarOwner"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/activity_button_blue_border"
        android:gravity="center"
        android:text="我不是车位主"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btnMineParkingSpace"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/btnImNotCarOwner"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/activity_button_blue_border"
        android:gravity="center"
        android:text="我的车位"
        android:textColor="@color/white"
        android:textSize="14sp" />

</RelativeLayout>
